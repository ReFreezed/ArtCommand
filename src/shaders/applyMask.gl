uniform Image mask;

vec4 effect(vec4 loveColor, Image tex, vec2 texUv, vec2 screenPos) {
	vec4 pixel      = Texel(tex , texUv);
	vec4 maskPixel  = Texel(mask, texUv);
	pixel.rgba     *= maskPixel.r;
	return pixel;
}
